# IDX Real Estate Solution - Environment Variables
# Copy this file to .env.local for local development

# API Configuration
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# REBNY IDX API 
NEXT_PUBLIC_REBNY_API_KEY=your_rebny_api_key_here
REBNY_API_SECRET=your_rebny_api_secret_here
REBNY_IDX_ENDPOINT=https://api.rebny.com/idx/v1

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Database Configuration (if not using Supabase)
DATABASE_URL=postgresql://user:password@localhost:5432/idx_database

# Authentication
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRY=7d
COOKIE_SECRET=your_cookie_secret_here

# External Services
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here
MAPBOX_ACCESS_TOKEN=your_mapbox_access_token_here

# Email Service
EMAIL_SERVICE=smtp
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email_user
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@example.com

# Deployment Configuration
NODE_ENV=development # Set to 'production' for production builds
PORT=3000

# Vercel (if deployed to Vercel)
VERCEL_URL=your-project.vercel.app
VERCEL_TOKEN=your_vercel_token_here
VERCEL_PROJECT_ID=your_project_id
VERCEL_TEAM_ID=your_team_id

# Feature Flags
ENABLE_VIRTUAL_TOURS=true
ENABLE_MAP_SEARCH=true
ENABLE_ANALYTICS=true

# Analytics & Monitoring
NEXT_PUBLIC_GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
SENTRY_DSN=https://your_sentry_dsn_here

# Rate Limiting
RATE_LIMIT_MAX=100 # Maximum number of requests in window
RATE_LIMIT_WINDOW=60000 # Window size in milliseconds (1 minute)

# Cache Configuration
REDIS_URL=redis://localhost:6379
CACHE_TTL=3600 # Time-to-live in seconds

# Security
CORS_ORIGIN=http://localhost:3000
CSP_DIRECTIVES=default-src 'self'; script-src 'self' 'unsafe-inline' https://maps.googleapis.com; 